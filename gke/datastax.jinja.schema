info:
  description: DataStax Enterprise on Kubernetes
  author: Google, Inc.
  version: draft

required:
- clusterType
- numNodes

properties:
  clusterType:
    type: string
    description: Type for cluster to deploy into.
  numNodes:
    type: integer
    description: Number of nodes in the cluster, used for the host-port hack.
    default: 4
